{
  "name": "ufrj-sinos",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "ramda": "^0.27.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "tailwindcss": "^1.4.6"
  },
  "scripts": {
    "build:tailwind": "tailwind build src/scss/sinos.scss -o src/styles.css",
    "watch:tailwind": "chokidar 'src/scss/*.scss' -c 'npm run build:tailwind'",
    "start": "npm-run-all build:tailwind --parallel watch:tailwind start:react",
    "start:react": "react-scripts start",
    "build": "npm run build:style && react-scripts build",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.5",
    "node-sass": "^4.14.1",
    "postcss-cli": "^7.1.1",
    "chokidar-cli": "^2.1.0",
    "npm-run-all": "^4.1.5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
